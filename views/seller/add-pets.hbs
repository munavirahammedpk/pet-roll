<section class="container mb-5">
    <form action="/add-pets" method="post" enctype="multipart/form-data">

        <div class="container mt-4">
            <h2 class="text-center">Sell Your Pets</h2>
            <div class="row">
                <div class="col-md-6">
                    <div class="container mt-5">
                        <h4>Pet Details :</h4>
                        <label for="">Name</label>
                        <input type="text" name="name" maxlength="30" class="form-control"
                            placeholder="Type your Pet's Name.." required>

                        <label for="">Category</label>
                        <input type="text" name="category" class="form-control"
                            placeholder="Dog, Cat, Fish, Bird or anything" required>

                        <label for="">Price</label>
                        <input type="number" name="price" class="form-control" required
                            placeholder="Estimated Price in RS.">

                        <label for="">Description</label>
                        <textarea name="description" id="" cols="30" rows="3" maxlength="180" class="form-control"
                            placeholder="Type a Brief Description About Your Pet" required></textarea>
                        <br>

                        <h6 for="">Picture 1</h6>
                        <input type="file" onchange="return fileValidation_0()" name="image0" id="image0"
                            class="form-control" required>
                        <br>

                        <div id="imagePreview_0"></div>

                        <h6 for="">Picture 2</h6>
                        <input type="file" onchange="return fileValidation_1()" name="image1" id="image1"
                            class="form-control" required>
                        <br>
                        <div id="imagePreview_1"></div>

                        <h6 for="">Picture 3</h6>
                        <input type="file" onchange="return fileValidation_2()" name="image2" id="image2"
                            class="form-control" required>
                        <br>
                        <div id="imagePreview_2"></div>

                    </div>
                </div>

                <div class="col-md-6">
                    <div class="container mt-5">
                        <h4>Seller Details :</h4>
                        <div class="form-group">
                            <label for="">Owner Name</label>
                            <input type="text" class="form-control" name="oname" required
                                placeholder="Enter Your Name...">
                        </div>
                        <div class="form-group">
                            <label for="">Mobile Number</label>
                            <input type="number" class="form-control" name="mobile"
                                placeholder="Enter a valid contact No."  pattern=".{10,}" title="Must contain at least 10">
                        </div>
                        <div class="form-group">
                            <label for="">Place</label>
                            <input type="text" class="form-control" name="place" required
                                placeholder="Enter Your Place...">
                        </div>
                        <div class="form-group">
                            <label for="">District</label>
                            <input type="text" class="form-control" name="district" required
                                placeholder="District Name...">
                        </div>
                        <div hidden>
                            <input type="text" name="userid" value="{{user._id}}" hidden>
                        </div>
                        <button type="submit" class="btn btn-success mt-4">Submit</button>
                    </div>
                </div>

            </div>
        </div>
    </form>

</section>

<script>
    function fileValidation_0() {
        var fileInput =
            document.getElementById('image0');

        var filePath = fileInput.value;

        // Allowing file type
        var allowedExtensions =
            /(\.jpg|\.jpeg|\.png|\.gif|\.jfif)$/i;

        if (!allowedExtensions.exec(filePath)) {
            alert('Invalid file type');
            fileInput.value = '';
            return false;
        }
        else {

            // Image preview
            if (fileInput.files && fileInput.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById(
                        'imagePreview_0').innerHTML =
                        '<img src="' + e.target.result
                        + '" style="width: 150px; height=150px"/>';
                };

                reader.readAsDataURL(fileInput.files[0]);
            }
        }
    }
