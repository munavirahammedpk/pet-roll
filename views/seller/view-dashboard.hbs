<div class="container">
  <div class="mt-5" style="overflow-x: auto;">
    <table class="table mt-5" id="productsTable">
      <thead>
        <tr>

          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th scope="col">Image</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        {{#if details.status}}
        <h2 class="text-center" style="color: brown;">No Items in Your Dashboard !!</h2>
        <button class="seller ml-5 mt-5">
            <a class="sell" href="/seller" style="text-decoration: none; color:rgb(224, 42, 42)">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-plus-lg"
                    viewBox="0 0 16 16">
                    <path
                        d="M8 0a1 1 0 0 1 1 1v6h6a1 1 0 1 1 0 2H9v6a1 1 0 1 1-2 0V9H1a1 1 0 0 1 0-2h6V1a1 1 0 0 1 1-1z" />
                </svg>Sell
            </a>
        </button>

        {{else}}
        {{#each details}}

        <tr>

          <td>{{this.name}}</td>
          <td>{{this.category}}</td>
          <td>{{this.price}}</td>
          <td><img style="width: 50px; height=50px" src="/pet-images/{{this._id}}/{{this._id}}0.jpg" alt="..."></td>
          <td>
            <a href="/edit-pet/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="delete-pet/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you want to delete {{this.name}} ?')">Delete</a>
            <!-- <a href="/admin/delete-product/?id={{this._id}}&name=..." class="btn btn-danger">Delete</a>-->
          </td>
        </tr>

        {{/each}}
        {{/if}}

      </tbody>
    </table>

  </div>
</div>