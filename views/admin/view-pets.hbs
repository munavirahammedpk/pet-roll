<section>

  <div class="container">
    <div class="mt-5" style="overflow-x: auto;">
      <table class="table mt-5" id="productsTable">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Owner Name</th>
            <th scope="col">Image</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody>
          {{#if pets.status}}
          <h3 class="text-center">No Items...</h3>
          {{else}}
          {{#each pets}}
          <tr>
            <td>{{inc @index}}</td>
            <td>{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.oname}}</td>
            <td><img style="width: 50px; height=50px" src="/pet-images/{{this._id}}/{{this._id}}0.jpg" alt="..."></td>
            <td>

              <a href="/admin/delete-pet/{{this._id}}" class="btn btn-danger"
                onclick="return confirm('Are you want to delete {{this.name}} ?')">Delete</a>
              <!-- <a href="/admin/delete-product/?id={{this._id}}&name=..." class="btn btn-danger">Delete</a>-->

            </td>
          </tr>
          {{/each}}
          {{/if}}
        </tbody>
      </table>
      <a href="/admin/signup">signup</a>
    </div>
  </div>
</section>
<script>
  $(document).ready(function () {
    $('#productsTable').DataTable();
  });
</script>