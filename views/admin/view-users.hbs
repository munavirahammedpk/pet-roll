<section>

  <div class="container">


    <div class="mt-5" style="overflow-x: auto;">
      <table class="table mt-5" id="productsTable">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Name</th>
            <th scope="col">Email Id</th>
            <th scope="col">Option</th>
            <th scope="col">View Pets</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <td>{{inc @index}}</td>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>
              <a href="/admin/delete-user/{{this._id}}" class="btn btn-danger"
                onclick="return confirm('Are you want to delete {{this.name}} ?')">Delete</a>
              <!-- <a href="/admin/delete-product/?id={{this._id}}&name=..." class="btn btn-danger">Delete</a>-->
            </td>
            <td><a href="/admin/view-pets/{{this._id}}" class="btn btn-primary">View</a></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>
<script>
  $(document).ready(function () {
    $('#productsTable').DataTable();
  });
</script>