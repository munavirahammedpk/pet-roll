<section>

    <div class="container">
        <div class="mt-5" style="overflow-x: auto;">
            <table class="table mt-5" id="productsTable">
                <thead>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Email Id</th>
                        <th scope="col">Option</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each banned}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td>{{this.bannedId}}</td>
                        <td>
                            <a href="/admin/delete-banned/{{this.bannedId}}" class="btn btn-danger"
                                onclick="return confirm('Are you want to delete {{this.bannedId}} ?')">Delete</a>
                            <!-- <a href="/admin/delete-product/?id={{this._id}}&name=..." class="btn btn-danger">Delete</a>-->
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <a href="/admin/signup">signup</a>
        </div>

    </div>
</section>
<script>
    $(document).ready(function () {
        $('#productsTable').DataTable();
    });
</script>