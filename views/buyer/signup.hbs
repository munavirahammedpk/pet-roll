<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="container mt-5 pl-5">
                <h2 class="text-center">Create new Account</h2>
                <form action="/signup" method="POST">
                {{#if error}}
                <h5 class="error" style="color: rgb(233, 13, 13);">This Email Id is Already Exist</h5>
                 {{/if}}
                 {{#if bannedmsg}}
                 <h5 class="error" style="color: rgb(233, 13, 13);">Your Account is Banned...!</h5>
                 {{/if}}
                    <div class="form-group">
                        <label for="">Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Enter name" required>

                    </div>

                    <div class="form-group">
                        <label for="">Email Address</label>
                        <input type="email" class="form-control" name="email" placeholder="Enter email" required>

                    </div>
                    <div class="form-group">
                        <label for="">Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Password" pattern=".{8,}" title="Must contain at least 8 or more characters" required>
                    </div>
                    
                    


                    <a href="/login">Already have account ?</a>
                    <button type="submit" class="btn btn-primary float-right">Signup</button>
                </form>

            </div>
        </div>
    </div>
</div>