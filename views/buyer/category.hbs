<section>

  <div class="container-fluid mt-5">

    <div class="row">
      {{#each details}}
      <div class="col-md-4 col-lg-3 col-sm-6 p-3">
        <div class="card" style="width: 15rem; height:26rem">
          <div id="{{this._id}}" class="carousel slide card-img-top" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              {{#if (ifSecond this._id)}}
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              {{/if}}
              {{#if (ifThird this._id)}}
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              {{/if}}
              {{#if (ifFourth this._id)}}
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              {{/if}}
            </ol>
            <div class="carousel-inner">

              <div class="carousel-item active">
                <img class="d-block w-100" style="height: 250px;" src="/pet-images/{{this._id}}/{{this._id}}0.jpg"
                  alt="First slide">
              </div>

              {{#if (ifSecond this._id)}}
              <div class="carousel-item">
                <img class="d-block w-100" style="height: 250px;" src="/pet-images/{{this._id}}/{{this._id}}1.jpg"
                  alt="Second slide">
              </div>
              {{/if}}
              {{#if (ifThird this._id)}}
              <div class="carousel-item">
                <img class="d-block w-100" style="height: 250px;" src="/pet-images/{{this._id}}/{{this._id}}2.jpg"
                  alt="Third slide">
              </div>
              {{/if}}
              {{#if (ifFourth this._id)}}
              <div class="carousel-item">
                <img class="d-block w-100" style="height: 250px;" src="/pet-images/{{this._id}}/{{this._id}}2.jpg"
                  alt="fourth slide">
              </div>
              {{/if}}
            </div>
            <a class="carousel-control-prev" href="#{{this._id}}" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#{{this._id}}" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>


          <div class="card-body">
            <h5 class="card-title">

              {{this.name}}

            </h5>
            <h6>{{this.category}}</h6>

            <p class="card-text">Rs.{{this.price}}</p>


            <a class="btn btn-success" href="tel:{{this.mobile}}"><i class="bi bi-telephone"></i></i> Call Now..</a>
            <a class="btn btn-primary" href="/more/{{this._id}}">More...</a>
          </div>
        </div>

      </div>


      {{/each}}
    </div>

  </div>

</section>

<style>
  .carousel-indicators li {
    border-radius: 50%;
    width: 12px;
    height: 12px;
  }
</style>