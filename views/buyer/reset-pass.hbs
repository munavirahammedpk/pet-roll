<div class="row">
    <div class="col-lg-6 m-auto">
        <div class="container mt-3 pl-2">
            <h3 class="text-center">Reset Password for <p>{{email}}</p> </h3>
            <form action="" method="POST">
                <div class="form-group">
                    <label for="password">Password </label>
                    <input type="password" class="form-control" name="newpass" placeholder="Enter New" pattern=".{8,}" title="Must contain at least 8 or more characters" required>
                </div>
                <button type="submit" class="btn btn-primary float-right">Reset</button>
            </form>            
        </div>
    </div>
</div>

