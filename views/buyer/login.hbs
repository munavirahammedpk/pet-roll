<div class="row">
    <div class="col-md-5 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Login</h2>
            <form action="/login" method="POST">
            {{#if error}}
                <h5 class="error" style="color: rgb(233, 13, 13);">Invalid User Name Or Password</h5>
            {{/if}}
            {{#if bannedmg}}
                <h5 class="error" style="color: rgb(233, 13, 13);">Your Account is Banned !!...</h5>
            {{/if}}
                <div class="form-group">
                    <label for="">Email Address</label>
                    <input type="email" style="border-radius: 50px;" class="form-control" name="email" placeholder="Enter email" required>
                        <div>
                            {{#if userErr}}
                            <p style="color: red;">User name does not exist, Invalid user name.</p>
                            {{/if}}
                        </div>
                </div>
                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" style="border-radius: 50px;" class="form-control" name="password" placeholder="Password" pattern=".{8,}" title="Must contain at least 8 or more characters" required>
                    <div>
                        {{#if passwordErr}}
                        <p style="color: red;">Password is does not match with User name</p>
                        {{/if}}
                    </div>
                </div>
                
                <a href="/signup">Create new account ?</a>
                <br><br>
                <a href="/forgot">Forgot Password ?</a>
                <button type="submit" class="btn btn-primary float-right">Login</button>
            </form>
            
        </div>
    </div>
</div>
